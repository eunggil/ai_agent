# ============================================
# 로컬 개발 환경 - Ollama + Docker Compose
# ============================================

# GCP (로컬 Ollama 테스트 시 비워도 됨)
GCP_PROJECT_ID=
GCP_REGION=us-central1

# 애플리케이션
ENVIRONMENT=development
LOG_LEVEL=DEBUG
API_VERSION=v1

# GCP 인증 (Vertex AI 미사용 시 불필요, 파일 없어도 컨테이너 실행됨)
GOOGLE_APPLICATION_CREDENTIALS=~/.config/gcloud/application_default_credentials.json

# ============================================
# AI Provider: Ollama 로컬 LLM
# ============================================
AI_PROVIDER=local

# Docker → 호스트 Ollama 연결 (Mac에서 자동 동작)
OLLAMA_BASE_URL=http://host.docker.internal:11434

# 사용할 모델 (ollama pull 로 받은 모델명과 일치해야 함)
LOCAL_MODEL=llama3

# ============================================
# 미디어 생성: 우선 none으로 텍스트만 테스트
# ============================================
MEDIA_PROVIDER=none
MEDIA_TYPE=image
IMAGE_MODEL=lcm-lora-sdxl
VIDEO_MODEL=animatediff-lcm

# ============================================
# DB (Mock 사용 - 실제 DB 불필요)
# ============================================
USE_MOCK_VECTOR_DB=true
USE_MOCK_GRAPH_DB=true

POSTGRES_DB=ai_agent
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

REDIS_HOST=redis
REDIS_PORT=6379

# ============================================
# Vertex AI (현재 미사용)
# ============================================
VERTEX_AI_MODEL=gemini-1.5-flash
VERTEX_AI_IMAGEN_MODEL=imagen-4.0-fast-generate-001
IMAGEN_WATERMARK=false
VERTEX_VEO_MODEL=veo-3.1-fast-generate-001
VERTEX_VEO_GCS_BUCKET=

# ============================================
# 기타
# ============================================
DIFFUSERS_DEVICE=auto
MEDIA_OUTPUT_DIR=/app/generated_media
AD_MAX_CANDIDATES=10
AD_REVENUE_WEIGHT=0.6
AD_FITNESS_WEIGHT=0.4
CACHE_TTL=3600
VECTOR_DIMENSION=128
VECTOR_SIMILARITY_THRESHOLD=0.7
